  }else{
    parameterLowpass=0.863;
  //Algoritma Low Pass Filter
   filter_low_pass=(float)(parameterLowpass*last_pitch)+((1-parameterLowpass)*x);
   last_pitch = filter_low_pass;
  }
  
   return filter_low_pass;
  }

